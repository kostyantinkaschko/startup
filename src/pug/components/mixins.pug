mixin services(name, id)
    figcaption(id=id)
        .circle(id=`${id}circle`)
            img(src=figure[name].src, alt=figure[name].alt)
        h2(id=`${id}H2`) #{figure[name].header}
        p #{figure[name].desc}

mixin people(name)
    figcaption
        img(src=people[name].src, alt=people[name].alt)
        h2 #{people[name].name}
        p #{people[name].header}

mixin works(name)
    figcaption(class=works[name].category)
        img(src=works[name].src, alt=works[name].alt)
        .hover 
            h2 #{works[name].header}
            p #{works[name].category} 
            a(href="javascript:void(0)" data-name=name class="view-button") View
   

mixin blog(name, id)
    figcaption(id=blog[name].id)
        .flex.column-gap40
            .img 
                img(src=blog[name].src, alt=blog[name].alt)
            .first-header
                .date-header
                    .date 
                        h2 #{blog[name].date}
                    .desc 
                        a(href="#")  #{blog[name].header}
                        p 
                            em
                                | by 
                                a(href="#" id="descHyper")  #{blog[name].authorFirstName}
                                |  #{blog[name].authorName}  in 
                                a(href="#" id="descHyper")  Development  
                p(id=blog[name].id+"p") #{blog[name].desc}
                a(href="#readMore" onclick=`readMore("${blog[name].id}")`)#readMore Read more

